{
    "variables": {
      "ansible_host": "default",
      "ansible_connection": "docker"
    },
    "builders": [
      {
        "type": "docker",
        "image": "rockylinux:9.3",
        "commit": "true",
        "run_command": [
          "-d",
          "-i",
          "-t",
          "--name",
          "{{user `ansible_host`}}",
          "{{.Image}}",
          "/bin/bash"
        ]
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "dnf install python 'dnf-command(config-manager)' -y"
        ]
      },
      {
        "type": "ansible",
        "user": "root",
        "playbook_file": "../ansible/base-image.yml",
        "extra_arguments": [
          "--extra-vars",
          "ansible_host={{user `ansible_host`}} ansible_connection={{user `ansible_connection`}}"
        ]
      }
    ],
    "post-processors": [
      [
        {
          "type": "docker-tag",
          "repository": "ghcr.io/lbrick/nesi-docker-base/nesi-docker-base",
          "tag": "0.7"
        }
      ]
    ]
  }